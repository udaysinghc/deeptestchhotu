{
  "name": "playwright-cucumber-framework",
  "version": "1.0.0",
  "description": "Playwright automation framework with Cucumber BDD",
  "main": "index.js",
  "scripts": {
    "clean": "rd /s /q reports 2>nul || mkdir reports && rd /s /q test-results 2>nul || mkdir test-results",
    "pretest": "npm run clean",
    "test": "cucumber-js --config cucumber.js",
    "test:tag": "cucumber-js --config cucumber.js --tags"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "@cucumber/cucumber": "^9.1.2",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.35.0",
    "cucumber-html-reporter": "^7.1.0",
    "dotenv": "^16.1.4",
    "playwright": "^1.35.0",
    "rimraf": "^5.0.0"
  }
}